<section class="mt-3">
  <div class="container">
    <div class="row all-books">
      {{#each books}}
        <div class="sm-12 col-md-6 p-3">
          <div class="card h-100 border-danger shadow">
            <div class="row g-0 align-items-center">
              <div class="sm-12 col-lg-5">
                <img
                  src="{{this.bookImage}}"
                  class="img-fluid rounded-start"
                  alt="{{this.bookTitle}}"
                />
              </div>
              <div class="sm col">
                <div class="card-body">
                  <h5 class="card-title">{{this.bookTitle}}</h5>
                  <p class="card-text">{{this.bookAuthor}}</p>
                  <p class="card-text"><small
                      class="text-muted"
                    >{{this.bookDescription}}</small>
                  </p>
                </div>
              </div>

            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>